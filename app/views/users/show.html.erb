<div class="container">
       <div class="row">
             <div class="col-md-6">
                  <div class="text-center">
                  <%= image_tag current_user.image_url, class: "img-circle", width: "200", height: "200" %>
                  </div>
                 <h2><%= @user.name %></h2>
                 <h2><%= link_to "Edit", edit_user_registration_path, class: "btn btn-primary" %></h2>
             </div>
             <div class="col-md-6">
                  <h3>Personal Details</h3><hr>
                  <h4>Email: <%= @user.email %></h4>
                  <h4>Age: <%= @user.age %></h4>
                  <h4>Username: <%= @user.username %></h4>
             </div>
          
      </div>
      <div class="row">
            <div class="col-md-12">
                  <h3>Address:</h3>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newaddress">Add Address </button>
                  <%= render 'addresses/form' %>
                  <hr>
            </div>
      </div>
   <% @addresses.each do |address| %>
      <div class="row">
             <div class="col-md-10">
                   <%= link_to "Profile", address_path(address) %>
                   <h4>Address 1: <%= address.address1 %></h4>
                   <h4>Address 2: <%= address.adddress2 %></h4>
                   <h4>State: <%= address.state %></h4>
                   <h4>City: <%= address.city %></h4>
                   <h4>Pin Code: <%= address.pincode %></h4>
             </div>
             <div class="col-md-2"> 
             <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#updateaddress_<%= address.id %>">Edit
             </button>
             <%= render @addresses %>
             <%= link_to "delete", address, method: :delete, class: "btn btn-danger" %>
            </div>
      </div>
    <hr>
    <% end %>
</div>

