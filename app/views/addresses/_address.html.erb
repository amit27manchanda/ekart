<!-- Modal for update -->
<%= form_for(address, :method => :put, remote: true) do |f| %>
      <div class="modal fade" id="updateaddress_<%= address.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                     <div class="modal-content">
                           <div class="modal-header">
                                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                     <span aria-hidden="true">&times;
                                     </span>
                                 </button>
                                 <h5 class="modal-title" id="myModalLabel">Edit</h5>
                          </div>
                          <div class="modal-body">
                                 <div class="field">
                                    <%= f.label :address1 %>
                                    <%= f.text_field :address1 ,class: "form-control"%>
                                 </div>
                                <div class="field">
    <%= f.label :adddress2 %>
    <%= f.text_field :adddress2, id: :address_adddress2,class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, id: :address_state,class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, id: :address_city,class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :pincode %>
    <%= f.number_field :pincode, id: :address_pincode,class: "form-control" %>
  </div>
                                 </div>
                               <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-dismiss="modal" id="updateaddress_<%= address.id %>">Close
                                      </button>
                                      <%= submit_tag "Update", class: "btn btn-primary" %>
                              </div>
                          </div>
             </div>
      </div>
<% end %>

<!------End modal for update -------->