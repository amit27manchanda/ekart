<h2>New Product</h2>

<%= form_for @product, remote: true  do |f| %>
<div class="field">
 <%= f.label :name %> <br>
 <%= f.text_field :name, class: "form-control post_title" %>
 </div>
  <div class="field">
 <%= f.label :description %> <br>
 <%= f.text_area :description, class: "form-control post_content" %>
</div>
 <div class="field">
 <%= f.label :price %> <br>
 <%= f.text_field :price, class: "form-control post_title" %>
 </div>
<div class="field">
 <%= f.label :category %> <br>
 <%= f.text_field :category, class: "form-control post_title" %>
 </div>
 <div class="field">
 <%= f.label :stock %> <br>
 <%= f.text_field :stock, class: "form-control post_title" %>
 <div class="field">
 <%= f.file_field :image %>
 <%= f.submit %>
<% end %>
</div>
